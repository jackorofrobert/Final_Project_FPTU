# Copy to app/.env and fill in values.
# Env is loaded from app/.env via python-dotenv.

# Application
PORT=5000
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database (path relative to project root)
DATABASE_PATH=data/app.db

# Gmail API
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REDIRECT_URI=http://localhost:5000/api/v1/auth/callback

# ML Model (path relative to project root)
MODEL_PATH=models/model.joblib

# Logging (optional)
LOG_LEVEL=INFO
# LOG_FILE=
# LOG_MAX_BYTES=10485760
# LOG_BACKUP_COUNT=5

# OAuth Development Configuration
# NOTE: OAUTHLIB_INSECURE_TRANSPORT=1 allows HTTP (non-HTTPS) OAuth callbacks in development.
# This is REQUIRED for local development with HTTP (e.g., http://localhost:5000).
# Production MUST use HTTPS and should NOT set this variable.
OAUTHLIB_INSECURE_TRANSPORT=1
